SHELL=/bin/bash
DISPLAY=:0
PATH=/sbin:/bin:/usr/sbin:/usr/bin
MAILTO=root
#m h dom mon dow user command 
0 * * * * root run-parts /etc/cron.hourly       #Runs a cron job script every hour
0 12 * * * root run-parts /etc/cron.daily       #Runs a cron job script every day
22 4 * * 0 root run-parts /etc/cron.weekly      #Runs a cron job script every week
42 4 1 * * root run-parts /etc/cron.monthly     #Runs a cron job script every month
